<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForumActivity"
    android:background="@color/white">





    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/forumRecylerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_above="@+id/forumKonuAcEditText">
    </androidx.recyclerview.widget.RecyclerView>



    <EditText
        android:id="@+id/forumKonuAcEditText"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:textColor="@color/black"
        android:hint="konu aç"
        android:textColorHint="@color/black"
        android:layout_width="250dp"
        android:layout_height="50dp">

    </EditText>

    <Button
        android:id="@+id/forumKonuAcButon"
        android:layout_toRightOf="@id/forumKonuAcEditText"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:text="Konu aç"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:layout_height="wrap_content">

    </Button>


</RelativeLayout>